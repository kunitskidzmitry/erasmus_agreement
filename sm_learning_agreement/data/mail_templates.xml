<odoo>
	<data noupdate="1">
		<record id="mail_student_form_invite" model="mail.template">
			<field name="name">Learning Agreement: Student Invite</field>
			<field name="model_id" ref="model_learning_agreement"/>
			<field name="subject">Fill in your Learning Agreement (Ref: ${object.name})</field>
			<field name="email_from">${(user.email_formatted or '')}</field>
			<field name="email_to">${object.student_partner_id.email}</field>
			<field name="body_html" type="html">
				<div>
					<p>Dear ${object.student_full_name or object.student_partner_id.name},</p>
					<p>Please fill in your contact details for the Learning Agreement by clicking the link below:</p>
					<p><a t-att-href="object.access_url">Fill your form</a><br/>
					<small>If the button does not work, copy this link: ${object.access_url}</small></p>
					<p>Thank you,<br/>${object.coordinator_partner_id.name or 'Coordinator'}</p>
				</div>
			</field>
		</record>

		<record id="mail_signature_reminder" model="mail.template">
			<field name="name">Learning Agreement: Signature Reminder</field>
			<field name="model_id" ref="model_learning_agreement"/>
			<field name="subject">Reminder: Signature pending for Learning Agreement ${object.name}</field>
			<field name="email_from">${(user.email_formatted or '')}</field>
			<field name="email_to">${','.join(filter(None, [object.student_partner_id.email, object.coordinator_partner_id.email]))}</field>
			<field name="body_html" type="html">
				<div>
					<p>This is a friendly reminder to sign the Learning Agreement <b>${object.name}</b>.</p>
					<p>You will receive a separate email from Odoo Sign with the signature link. If you cannot find it, please check your spam folder.</p>
				</div>
			</field>
		</record>
	</data>
</odoo>