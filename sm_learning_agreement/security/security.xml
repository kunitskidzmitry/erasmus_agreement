<odoo>
	<data>
		<record id="module_category_learning_agreement" model="ir.module.category">
			<field name="name">Learning</field>
			<field name="sequence">60</field>
		</record>

		<record id="group_learning_agreement_manager" model="res.groups">
			<field name="name">Learning Agreement Manager</field>
			<field name="category_id" ref="sm_learning_agreement.module_category_learning_agreement"/>
		</record>

		<!-- Record rule: portal users can only see their own agreements -->
		<record id="rule_learning_agreement_portal_own" model="ir.rule">
			<field name="name">Learning Agreement - Portal Own Records</field>
			<field name="model_id" ref="model_learning_agreement"/>
			<field name="groups" eval="[(4, ref('base.group_portal'))]"/>
			<field name="domain_force">[("student_partner_id","=",user.partner_id.id)]</field>
		</record>
	</data>
</odoo>